@page
@model Test.Pages.CreateUserModel
@{
    ViewData["Title"] = "Create User";
}

<div>
    <h5 class="head">
        New User
    </h5>
</div>
<div class="col one rounded" style="background-color:#FFC93C;padding:20px">
    <form>
        <div class="form-group">
            <label for="UserName">User Name</label>
            <input type="text" class="form-control" id="CreateUserName" aria-describedby="UserName">
        </div>
        <div class="form-group">
            <label for="CreateUserPassword">Password</label>
            <input type="text" class="form-control" id="CreateUserPassword" aria-describedby="Password">
        </div>
        <div class="form-group">
            <label for="CreateUserEmail">Email Address</label>
            <input type="text" class="form-control" id="CreateUserEmail" aria-describedby="Email">
        </div>
        <div class="col-md-8 text-center" style="margin: auto; padding: 10px;">
        <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>